        <activity android:name=".OrderDrinks.OrderMineralWater" />
        <activity android:name=".TopupActivity" />
        <activity android:name=".SnacksActivity" />
        <activity android:name=".Drinks.DrinksActivity" />
        <activity android:name=".Foods.FoodsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
    </application>

</manifest>