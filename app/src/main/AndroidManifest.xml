        <activity android:name=".PaySuccess.PaySuccessItems"></activity>
        <activity android:name=".PaySuccess.PaySuccessActivity" />
        <activity android:name=".OrderFoods.OrderPizza" />
        <activity android:name=".OrderFoods.OrderPancake" />
        <activity android:name=".OrderFoods.OrderHamburger" />
        <activity android:name=".OrderFoods.OrderDoughnut" />
        <activity android:name=".OrderDrinks.OrderSoda" />
        <activity android:name=".OrderDrinks.OrderOrangeJuice" />
        <activity android:name=".OrderDrinks.OrderCoffee" />
